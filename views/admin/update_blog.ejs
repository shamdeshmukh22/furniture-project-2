<%-include("navbar.ejs")%>

<form action="/admin/update_blog_data" method="post" enctype="multipart/form-data">
    <div class="container bg-white text-dark p-3 text-capitalize  ">
        <div class="row">
            <div class="col-md-12 bg-dark p-1 text-warning ">
                <h4 class="ml-5">update blog page ....</h4>
            </div>
           
            <div class="col-md-6 mt-3">
                Enter Blog image
                <input type="file" name="blog_image" id="" class="form-control" >

                 </div>
            <div class="col-md-4">
                <img class="mt-3 w-100" src="/uploads/<%=blogs.blog_image%>" alt="" width="100%" height="200px">
            </div>
            <div class="col-md-4 mt-3">
                Enter Blog title
                <input type="text" name="blog_title" id="" value="<%=blogs.blog_title%>" class="form-control">
                <input type="hidden" name="blog_id" id="" value="<%=blogs.blog_id%>" class="form-control">
            </div>
           
            <div class="col-md-4 mt-3">
                Enter Blog Post Date
                <input type="date" name="blog_post_date" id="" value="<%=blogs.blog_post_date%>" class="form-control">
            </div>
            <div class="col-md-4 mt-3">
                Enter Blog Post time
                <input type="time" name="blog_post_time" id="" value="<%=blogs.blog_post_time%>" class="form-control">
            </div>
    
            <div class="col-md-6 mt-3">
                Enter Blog post by
                <input type="text" name="blog_post_by" value="<%=blogs.blog_post_by%>"  class="form-control">
            </div>
    
            <div class="col-md-6     mt-3">
                Enter Blog post position
                <input type="text" name="blog_post_by_position" id="" value="<%=blogs.blog_post_by_position%>" class="form-control">
            </div>
            <div class="col-md-12 mt-3">
                Enter Blog details
                <textarea name="blog_detail" id="" class="form-control">
                    <%=blogs.blog_detail%>
                </textarea>
            </div>
            <div class="col-md-12 mt-4 text-center">
                <button class="btn btn-primary ">Update Blog data</button>
            </div>
        </div>
    </div>
    </form>
<%-include("footer.ejs")%>
