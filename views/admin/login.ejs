<form action="/admin/login_admin" method="post">
<div class="container-fluid p-3 bg-white text-capitalize mb-4 ">
    <div class="row justify-contect-center">
        <div class="col-md-12 bg-dark p-2 text-white mb-4">
            <h4>Admin Login here....</h4>
        </div>
        <div class="col-3   "></div>
        <div class="col-5 bg-light p-5 mb-5 mt-5 shadow-lg ">
               Enter mobile number
               <input type="number" name="admin_mobile"  class="form-control"> <br>
               Enter password
               <input type="password" name="password" id="myInput" class="form-control">
               <h2 class="text-white" id="show"  onclick="myFunction()"><i class="fa-solid fa-eye"></i></h2>
               <div class="text-center mt-3">
               <button class="btn btn-primary pr-5 pl-5 mt-3 ">Login</button>
               <br>
            </div>

        </div>
    </div>
</div>
</form>

<style>
    #show
    {
        margin-left:90%;
        margin-top: -40px;
        background-color: rgba(34, 39, 43,0.8);
        color: white;
        padding:4px;
        padding-left:3px;
        /* font-size: 15px; */
        border-radius: 0px 10px 10px 0px;
    }
</style>

<script>
    function myFunction() {
  var x = document.getElementById("myInput");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
</script>