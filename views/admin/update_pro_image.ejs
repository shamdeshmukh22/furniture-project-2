<%-include('navbar.ejs')%>
<div class="container">
    <div class="row">
        <%
        var arr=p_det[0].product_image.split("+||+");
        for(var i=0;i<arr.length;i++)
        {
            if(arr[i] != "")
            {
            %>
            <div class="col-md-4 mt-4 bg-light p-3 text-center">
                <img src="/uploads/<%=arr[i]%>" width="100%" height="200px" alt="">
                <a style="text-decoration: none"; href="/admin/delete_pro_image/<%=p_det[0].product_id%>/<%=arr[i]%>">
                    <button class="btn btn-danger mt-4 text-white">Delete</button>
                   </a>
                   <a style="text-decoration: none"; href="/admin/update_pro_image/<%=p_det[0].product_id%>/<%=arr[i]%>">
                    <button class="btn btn-primary mt-4 ms-2" >Update</button>
                </a>
              </div>
            
            <%
            }
        }
          %>
         

    </div>
</div>
<%-include('footer.ejs')%>