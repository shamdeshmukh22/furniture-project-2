<%- include('navbar.ejs')%>
<div class="container-fluid bg-white p-4">
    <div class="row">
        <div class="col-md-8">
            <h3>product data here...</h3>
            </div>
            <div class="col-md-4">
            <form action="/admin/product_search" method="get">
                <input type="text" name="str" id="" class="">
                <button class="btn btn-primary">search</button>
            </form>
        </div>
        <div class="col-md-12 mt-3">
            <table class="table table-striped table-bodered  table-sm">
                <tr>
                    <th>Action</th>
                    <th>SR NO</th>
                    <th>product type</th>
                    <th>product name</th>
                    <th>product price</th>
                    <th>product size</th>
                    <th>product color</th>
                </tr>
                <%
                for(var i=0;i<products.length;i++)
                {
                    %>
                    <tr>
                        <td>
                                <a href="/admin/delete_product/<%=products[i].product_id%>" onclick="return confirm('are you sure????')">
                                    <button class=" btn btn-warning  text-white "><i class=" fa-solid fa-trash"></i></button>
                                </a>
                                <a href="/admin/edit_product/<%=products[i].product_id%>">
                                    <button class="btn btn-primary ml-3  text-white "><i class="fa-solid fa-pen-to-square"></i></button>
                                </a>
                        </td>
                        <td><%=i+1%></td>
                        <td><%=products[i].product_type_name%></td>
                        <td><%=products[i].product_name%></td>
                        <td><%=products[i].product_price%></td>
                        <td><%=products[i].product_size%></td>
                        <td class="bg-white">
                            <div style=" height: 30px; width: 100%; background-color:<%=products[i].product_color%>;"></div></td>
                    </tr>
                    <%
                }
                %>
            </table>
        </div>

    </div>
</div>
<%- include('footer.ejs')%>
