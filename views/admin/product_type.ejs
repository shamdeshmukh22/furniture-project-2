<%- include('navbar.ejs') %>
<form action="/admin/save_product_type" method="post">
<div class="container bg-white p-4 ">
    <div class="row justify-contect-center ">
        <div class="col-md-12 bg-dark text-warning p-1 mt-3 mb-4">
            <h3>Add new product type here</h3>
        </div>
        <div class="col-md-6">
            Enter product  type
            <input type="text" name="product_type_name" class="form-control" id="">
        </div>
        <div class="col-md-2 pt-4">
            <button class="btn btn-primary  w-75">submit</button>
        </div>
    </div>
</div>
</form>

<table class="table table-striped w-100 mt-3 bg-white mt-4 " border="1">
    <tbody>
        <tr>
            <th>Action</th>
            <th>SR No</th>
            <th>product type</th>
        </tr>
        <%
        for(var i=0;i<types.length;i++)
        {
            %>
            <tr>
                <th>
                    <a href="/admin/delete_product_type/<%=types[i].product_type_id%>" onclick="return confirm('are you sure????')">
                        <button class=" btn btn-warning  text-white btn-lg"><i class=" fa-solid fa-trash"></i></button>
                    </a>
                    <a href="/admin/edit_product_type/<%=types[i].product_type_id%>">
                        <button class="btn btn-primary ml-3  text-white  btn-lg"><i class="fa-solid fa-pen-to-square"></i></button>
                    </a>
                </th>
                <th><%=i+1%></th>
                <th><%=types[i].product_type_name%></th>
            </tr>
            <%
        }
        %>
    </tbody>
</table>

<%- include('footer.ejs') %>