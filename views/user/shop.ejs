<script>
    function formatIndianRupees(amount) {
    let parts = amount.toString().split('.');
    parts[0] = parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, ',');
    return '₹' + parts.join('.');
}

const amount = 1234567.89;
console.log(formatIndianRupees(amount)); // Output: ₹12,34,567.89

</script>

